const Joi = require('joi')
const { guid, hashify } = require('../../utils')
const validator = require('../../helpers/validator')

class <%= config.title %> {
  constructor({ id, name }) {
    this.data = {
      name: name
    };
    this.schema = schema;

    if(id === undefined) {
      this.data.id = guid()
    }

    this.validate()
  }

  update({ name }) {
    if(name) {
      this.data.name = name
    }

    this.validate()

    return {
      login: this.data.name
    };
  }

  validate() {
    validator
      .validate(this.data)
      .for(this.schema)
  }
}

const schema = {
  name: Joi
    .string()
    .min(1)
    .max(120)
    .trim()
    .required()
    .label('Nome')
};

module.exports = <%= config.title %>
